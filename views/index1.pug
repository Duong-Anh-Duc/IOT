doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Dashboard
    link(rel="stylesheet", href="/css/index1.css")
    link(rel="stylesheet", href="/css/footer.css")
    link(rel="stylesheet", href="/css/header.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
  body
    include ./header/header.pug
    main#content.container-fluid
      .row.g-4
        //- Thẻ card hiển thị sức gió
        .col-md-4.text-center
          .card#card-wind.card-wind
            .card-body
              h3
                i.fas.fa-wind(id='wind-speed-icon')
              h6 Sức gió
              h1#text-wind 5 m/s
        //- Thẻ card cảnh báo riêng khi sức gió >= 60
        .col-md-4
          .card#chart-card
            .card-body 
              canvas#myChart
        .col-md-4.text-center
          .card#card-wind-alert.card-wind-alert
            .card-body
              h3
                i.i#wind-alert-icon.fas.fa-check-circle
              h6 
              h1#text-wind-alert 0 m/s (an toàn)
  

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src="/js/index1.js")
    script(src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels")
