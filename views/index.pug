doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Bảng điều khiển IoT
    link(rel="stylesheet", href="/css/index.css")
    link(rel="stylesheet", href="/css/footer.css")
    link(rel="stylesheet", href="/css/header.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
  body
    include ./header/header.pug
    .container-fluid
      .row.g-4
        .col-md-4
          .card#card-temp.card-temp
            .card-body.text-center
              h3
                i.fas.fa-thermometer-half
              h6 Nhiệt độ
              h1#text-temp 30°C
        .col-md-4
          .card#card-humid.card-humid
            .card-body.text-center
              h3
                i.fas.fa-tint
              h6 Độ ẩm
              h1#text-humid 65%
        .col-md-4
          .card#card-light.card-light
            .card-body.text-center
              h3
                i.fas.fa-lightbulb
              h6 Ánh sáng
              h1#text-light  Lux

      .row.mt-4
        .col-12
          .card#chart-card
            .card-body
              h3 Biểu đồ
              canvas#myChart

      .row.g-4.mt-4
        .col-md-4
          .card.card-light
            .card-body.text-center
              h3 #{lamp.Name}
              .btn-wrapper
                if lamp.TT == "on"
                  button(
                    type="button"
                    data-status=lamp.TT
                    data-id=lamp.id
                    button-change-status
                    class="badge badge-success"
                  ) Bật
                else
                  button(
                    type="button"
                    data-status=lamp.TT
                    button-change-status
                    data-id=lamp.id
                    class="badge badge-danger"
                  ) Tắt
              .img-box
                if lamp.TT == "on"
                  i.fas.fa-lightbulb(data-id=`${lamp.id}-icon`, class="light-on")
                else
                  i.fas.fa-lightbulb(data-id=`${lamp.id}-icon`, class="light-off")

        .col-md-4
          .card.card-fan
            .card-body.text-center
              h3 #{fan.Name}
              .btn-wrapper
                if fan.TT == "on"
                  button(
                    type="button"
                    data-status=fan.TT
                    data-id=fan.id
                    button-change-status
                    class="badge badge-success"
                  ) Bật
                else
                  button(
                    type="button"
                    data-status=fan.TT
                    button-change-status
                    data-id=fan.id
                    class="badge badge-danger"
                  ) Tắt
              .img-box
                if fan.TT == "on"
                  i.fas.fa-fan(data-id=`${fan.id}-icon`, class="fan-on")
                else
                  i.fas.fa-fan(data-id=`${fan.id}-icon`, class="fan-off")

        .col-md-4
          .card.card-ac
            .card-body.text-center
              h3 #{air_conditioner.Name}
              .btn-wrapper
                if air_conditioner.TT == "on"
                  button(
                    type="button"
                    data-status=air_conditioner.TT
                    data-id=air_conditioner.id
                    button-change-status
                    class="badge badge-success"
                  ) Bật
                else
                  button(
                    type="button"
                    data-status=air_conditioner.TT
                    button-change-status
                    data-id=air_conditioner.id
                    class="badge badge-danger"
                  ) Tắt
              .img-box
                if air_conditioner.TT == "on"
                  i.fas.fa-snowflake(data-id=`${air_conditioner.id}-icon`, class="fan-on")
                else
                  i.fas.fa-snowflake(data-id=`${air_conditioner.id}-icon`, class="text-muted")
    form(
      action=""
      method="POST"
      id="form-change-status"
      data-path="/change-status"
    )
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script(src="/js/index.js")
    script(src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels")
